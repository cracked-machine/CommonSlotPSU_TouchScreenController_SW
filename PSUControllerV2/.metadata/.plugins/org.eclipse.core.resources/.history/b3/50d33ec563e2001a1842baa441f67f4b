#ifndef UXMANAGER_H_
#define UXMANAGER_H_

/*
 * colour palette
 */
#define UX_H1_TXT_FGCOLOR		0xDEDD
#define	UX_TOP_BGCOLOR		0x3090
#define UX_TITLE_BGCOLOR		0x7275

#define UX_BODY_BGCOLOR			0xE73D
#define	UX_BODY_TXT_FGCOLOR		BLACK

struct uxdiaglayout
{
	uint16_t title_xpos = 15;
	uint16_t section1_heading_xpos = 50;
	uint16_t section1_line1_xpos = 70;
	uint16_t section1_line2_xpos = 90;
	uint16_t section2_heading_xpos = 123;
	uint16_t section2_line1_xpos = 150;
	uint16_t section2_line2_xpos = 170;
	uint16_t section2_line3_xpos = 190;
};


/*
 * layout types
 */
typedef enum
{
	UxSMBusDiagnosticsLayout = 0U,
	UxPsuDisplayLayout
}	UxLayoutsTypedef;


/*
 * Function declarations
 */
void UxDrawLayout(UxLayoutsTypedef nextLayout);

#endif /* UXMANAGER_H_ */
