#ifndef UXMANAGER_H_
#define UXMANAGER_H_

/*
 * colour palette
 */
#define UX_H1_TEXT_FGCOLOR		0xDEDD
#define	UX_TOP_FRAME_BGCOLOR		0x3090
#define UX_TOP_TEXT_BGCOLOR		0x7275

#define UX_BODY_BGCOLOR			0xE73D
#define	UX_BODY_TEXT_FGCOLOR		BLACK

/*
 * layout types
 */
typedef enum
{
	UxSMBusDiagnosticsLayout = 0U,
	UxPsuDisplayLayout
}	UxLayoutsTypedef;


/*
 * Function declarations
 */
void UxDrawLayout(UxLayoutsTypedef nextLayout);

#endif /* UXMANAGER_H_ */
