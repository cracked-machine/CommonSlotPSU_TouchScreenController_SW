#ifndef TSC2046_STM32_EVENTMANGER_H_
#define TSC2046_STM32_EVENTMANGER_H_

//

typedef enum
{

	TSC2046_IdleState = 0x0,
	TSC2046_ConversionState

} TSC2046_StatesTypedef;

typedef enum
{
	TSC2046_evIdle = 0x0,
	TSC2046_evPen = 0x1

} TSC2046_EventsTypedef;



TSC2046_StatesTypedef	TSC2046_EM_GetTouchScreenState();

void 					TSC2046_EM_ProcessEvent(TSC2046_EventsTypedef &newEvent);



#endif /* TSC2046_STM32_EVENTMANGER_H_ */
