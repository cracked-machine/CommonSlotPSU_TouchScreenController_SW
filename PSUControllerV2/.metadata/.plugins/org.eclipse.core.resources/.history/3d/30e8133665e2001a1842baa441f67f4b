#include "UxManager.h"
#include "ILI9341_STM32_Driver.h"
#include "ILI9341_GFX.h"



void UxInit()
{
	UxDiagLayout.title_xpos = 15;
	UxDiagLayout.section1_heading_xpos = 50;
	UxDiagLayout.section1_line1_xpos = 70;
	UxDiagLayout.section1_line2_xpos = 90;
	UxDiagLayout.section2_heading_xpos = 123;
	UxDiagLayout.section2_line1_xpos = 150;
	UxDiagLayout.section2_line2_xpos = 170;
	UxDiagLayout.section2_line3_xpos = 190;
}

void UxDrawLayout(UxLayoutsTypedef nextLayout)
{
	ILI9341_Fill_Screen(UX_BODY_BGCOLOR);
	ILI9341_Draw_Rectangle(0, 0, 320, 10, UX_TOP_BGCOLOR, AREA_CHUNK);
	ILI9341_Draw_Rectangle(0, 10, 320, 30, UX_TITLE_BGCOLOR, AREA_CHUNK);

	// address discovery results
	ILI9341_Draw_Bordered_Filled_Rectangle_Coord(20, 65, 280, 60, UX_BODY_BGCOLOR, 1, BLACK);

	// smbus test results
	ILI9341_Draw_Bordered_Filled_Rectangle_Coord(20, 140, 280, 90, UX_BODY_BGCOLOR, 1, BLACK);
}
