#include "UxManager.h"
#include "ILI9341_STM32_Driver.h"
#include "ILI9341_GFX.h"

void UxDrawLayout(UxLayoutsTypedef nextLayout)
{
	ILI9341_Fill_Screen(UX_BODY_BGCOLOR);
	ILI9341_Draw_Rectangle(0, 0, 320, 10, UX_TOP_BGCOLOR, AREA_CHUNK);
	ILI9341_Draw_Rectangle(0, 10, 320, 40, UX_TITLE_BGCOLOR, AREA_CHUNK);

	// address discovery results
	ILI9341_Draw_Bordered_Filled_Rectangle_Coord(20, 70, 280, 60, UX_BODY_BGCOLOR, 1, BLACK);

	// smbus test results
	ILI9341_Draw_Bordered_Filled_Rectangle_Coord(20, 160, 280, 60, UX_BODY_BGCOLOR, 1, BLACK);
}
